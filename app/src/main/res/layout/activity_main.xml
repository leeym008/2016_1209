<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a403.a2016_1209.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Layout1">

        <TextView
            android:text="예약시작"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" />

        <Switch
            android:text="Switch"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" />

        <Chronometer
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer1"
            android:text="예약에 걸린 시간 :"
            android:gravity="center"
            android:layout_weight="0.04" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:id="@+id/Layout2">

        <RadioGroup
            android:layout_width="193dp"
            android:layout_height="wrap_content" >

            <TextView
                android:text="어른(15000원)"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/textView2" />

            <TextView
                android:text="청소년(12000원)"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/textView3" />

            <TextView
                android:text="어린이(8000원)"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:id="@+id/textView4"
                android:autoText="false"
                android:allowUndo="false" />

            <RadioButton
                android:text="기본할인(5%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1" />

            <RadioButton
                android:text="현금할인(10%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2" />

            <RadioButton
                android:text="MemberShip있음(20%할인)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3" />

        </RadioGroup>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/Layout3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText2"
                android:inputType="number" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText3"
                android:inputType="number" />

            <ImageView
                android:layout_width="166dp"
                android:layout_height="108dp"
                app:srcCompat="@drawable/a"
                android:id="@+id/imageView"
                android:layout_weight="0.05" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/Layout4">

        <Button
            android:text="예약완료"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_weight="0.31" />

        <Button
            android:text="시간예약 GO"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/Layout5">

        <TextView
            android:text="총 명수 :"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:layout_weight="1.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1.56" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/Layout6">

        <TextView
            android:text="할인금액 :"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView6"
            android:layout_weight="0.48" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView9"
            android:layout_weight="0.64" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:weightSum="1"
        android:id="@+id/Layout6">

        <TextView
            android:text="결제금액 :"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="0.95" />

        <TextView
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:id="@+id/textView10"
            android:layout_weight="0.95" />
    </LinearLayout>

</LinearLayout>